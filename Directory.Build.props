<Project>
  <!-- Suppress warnings only for XCompression (third-party submodule) -->
  <PropertyGroup Condition="$(MSBuildProjectName) == 'XCompression'">
    <NoWarn>$(NoWarn);CS8618;CS8625;CS8601;CA1051;CA2101;CA1305;CA5351;IDE0060;IDE0161</NoWarn>
    <!-- Disable code analysis for third-party code -->
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
</Project>
